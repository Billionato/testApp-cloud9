<%= form_for @quote do |f| %>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
    <br>
    <br>
    
    <%= f.label :body, "Quote" %><br>
    <%= f.text_area :body %>
    <br>
    <br>
    
    <%= f.label :context, "Context" %><br>
    <%= f.text_area :context %>
    <br>
    <br>
    
    <%= f.submit :submit %>
<% end %>