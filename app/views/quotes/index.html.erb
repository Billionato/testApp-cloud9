<div class="wrapper_wide">
    <% @quotes.each do |quote| %>
        <div>
            <h3><%= quote.author %></h3>
            <p><%= quote.body %></p>
            <p><%= time_ago_in_words quote.created_at %> ago</p>
            <div class"links">
                <%= link_to "View", quote_path(quote) %>
            </div>
        </div>
    <% end %>
</div>